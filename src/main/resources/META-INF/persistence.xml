<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="mtg_draft_leagues" transaction-type="RESOURCE_LOCAL">
        <!-- Persistence provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classes -->
        <class>org.rd.draftleague.core.model.Player</class>
        <class>org.rd.draftleague.core.model.League</class>

        <properties>
            <!-- The JDBC URL to the database instance -->
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/mtg_draft_leagues?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC" />

            <!-- The database username -->
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
            <property name="show_sql" value="true" />
            <property name="connection_pool_size" value="10" />
            <property name="hibernate.c3p0.unreturnedConnectionTimeout" value="60"/>
        </properties>
    </persistence-unit>
</persistence>